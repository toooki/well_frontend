{
    "extends": ["eslint:recommended", "plugin:react/recommended"],

    "env": {
        "browser": true,

        "node": true,

        "es6": true
    },

    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },

    "rules": {
        "no-unused-vars": "off",
        "react/prop-types": "off",
        "no-console": "off"
    },

    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
